@model IEnumerable<librarymanagement.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<div class="text-center my-4">
    <h2 class="text-coffee fw-bold heading-style">Library Management - Students</h2>
</div>




    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-action="RegisterStudent" class="btn btn-dark shadow"> Register Student</a>
            <a asp-controller="Book" asp-action="IssueBook" class="btn btn-dark shadow"> 📖 Issue Book</a>

        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.name)</th>
                    <th>@Html.DisplayNameFor(model => model.studentid)</th>
                    <th>@Html.DisplayNameFor(model => model.semester)</th>
                    <th>@Html.DisplayNameFor(model => model.department)</th>
                    <th>@Html.DisplayNameFor(model => model.contactnumber)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-light">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.studentid)</td>
                        <td>@Html.DisplayFor(modelItem => item.semester)</td>
                        <td>@Html.DisplayFor(modelItem => item.department)</td>
                        <td>@Html.DisplayFor(modelItem => item.contactnumber)</td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary editBtn" data-id="@item.Id"> Edit</button>
                           
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>
    body {
        background: #F5E1C8; /* Soft beige */
        color: #5D4037; /* Coffee brown */
    }

    .table thead {
        background: #5D4037;
        color: white;
    }

    .btn {
        transition: 0.3s;
        font-weight: 500;
    }

        .btn:hover {
            transform: scale(1.05);
            background: #8D6E63;
            color: white;
        }

    .text-coffee {
        color: #6F4E37; /* Coffee Brown */
    }

    .heading-style {
        font-size: 2.5rem; 
        text-transform: uppercase; 
        letter-spacing: 2px; 
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); 
        border-bottom: 3px solid #D4AF37; 
        display: inline-block; 
        padding-bottom: 5px;
        margin-bottom: 20px; 
    }


</style>
